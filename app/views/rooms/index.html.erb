<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.label :address_keyword, '場所' %>
    <%= f.text_field :address_keyword, value: @address_keyword %>
    <%= f.label :details_keyword, 'キーワード' %>
    <%= f.text_field :details_keyword, value: @details_keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<h3>検索結果 <%= @rooms.count %>件</h3>

<% @rooms.each do | room | %>
  <%= image_tag room.image_name.url, size: "300x200" %>
  <p> <%= link_to room.name,room_path(room)  %> </p>
  <p> <%= room.details %> </p>
  <p> <%= room.price %> </p>
  <p> <%= room.address %> </p>
  <p> <%= room.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M') %> </p>
<% end %>
