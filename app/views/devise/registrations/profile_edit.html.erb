<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.label :image_name, "画像" %><br>
  <%= image_tag @user.image_name.url, size: '300x200' if @user.image_name? %>

  <div class="field">
   <%= f.file_field :image_name %><br>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name, autofocus: true%><br>
    <%= f.label :bio, "自己紹介"%><br>
    <%= f.text_area :bio%><br>
    <%= f.submit "変更" %>
    </div>
<% end %>
