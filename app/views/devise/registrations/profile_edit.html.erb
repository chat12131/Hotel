<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= image_tag @user.image_name.url, size: '300x200' if @user.image_name? %>

  <div class="field">
   <%= f.label :image_name, "画像" %><br/>
   <%= f.file_field :image_name %>
  </div>

  <div class="field">
    <%= f.label :name, "名前" %><br/>
    <%= f.text_field :name, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :bio, "自己紹介"%><br/>
    <%= f.text_area :bio%>
  </div>

  <div class="actions">
    <%= f.submit "変更" %>
  </div>
<% end %>
